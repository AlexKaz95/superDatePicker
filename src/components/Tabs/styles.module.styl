.tabs {
  width: 460px;
  margin: 0 auto;
  border-radius: 4px;
}

.tabsHeader {
  display: flex;
  background-color: #f5f5f5;
}

.tab {
  flex: 1;
  padding: 10px 20px;
  cursor: pointer;
  text-align: center;
  border-bottom: 2px solid transparent;
  transition: border-bottom-color 0.3s ease;
}

.tab:hover {
  border-bottom-color: #3e74fb;
}

.active {
  border-bottom-color: #3e74fb;
}

.tabsContent {
  padding: 20px;
}