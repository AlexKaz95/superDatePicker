.row{
  display: flex;
  flex-direction: row; /* Горизонтальное расположение элементов (по умолчанию) */
  align-items: flex-start; /* Выравнивание элементов по вертикали */
  gap: 10px;
  margin-top: 5px;
}

.container{
  margin-bottom: 20px;
}

.applyButton, .startButton{
    padding: 10px 15px;
    background: #fff;
    border: 1px solid #007ef9;
    border-radius: 4px;
    cursor: pointer;
    color: #007ef9;
    position relative
    text-align: center
}

.startButton{
  padding-left 25px;
  flex-grow: 1;
}

.title{
  font-size: 14px;
  color: gray;
}

.link{
    display: block;
    padding: 4px 0px;
    color: #007ef9;
    width: max-content;
}

.link:hover{
  text-decoration: none;
  color: #005fbb;
}

.linkWrapper{
    display: grid;
    width: 100%;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: repeat(1fr, 5);
}

.playIcon{
  position: absolute;
  left: 10px;
}