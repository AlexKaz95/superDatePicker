.inputContainer {
  position: relative;
}

.inputContainer input {
  width: 100px;
  font-family: 'Roboto';
  font-size: 16px;
  padding: 10px 0 10px 15px;
  border-radius: 2px;
  margin-bottom: 5px;
  border: none;
  background: #fff;
  border-bottom: 2px solid #ccc;
  color: #333;
}

.inputContainer input:focus,
.inputContainer input:focus-visible {
  border: none;
  outline: none;
  border-bottom: 2px solid #007ef9;
}

.inputContainer input.error{
  border-bottom: 2px solid red;
  background: #ffe2e1
}

/* Стили для ошибки */
.inputContainer .errorMessage {
  color: red;
  font-size: 14px;
}