.wrapper{
    display: block
    width: 40px
    height: 20px
    border-radius: 20px
    background: #eee
    border: 4px solid #eee
    position: relative
    box-sizing: content-box
}
.active{
    background: #d0e8ff
    border: 4px solid #d0e8ff
}
.inner{
    display: block
    width: 20px
    height: 20px
    border-radius: 20px
    background: #aaa
    transition: 0.3s
    position: absolute
    left: 0
    top: 0
}

.innerActive{
    display: block
    width: 20px
    height: 20px
    border-radius: 20px
    background: #258ffb
    left: 20px
}

.toggle{
    display: flex
    align-items: center
    gap: 10px
    margin-top: 10px
}