.btn{
    width: 100%;
    background-color: #006BB4;
    border-color: #006BB4;
    color: #FFF;
    line-height: 32px;
    cursor: pointer;
    font-weight: 400;
    font-size: 16px;
    border: solid 1px transparent;
    transition: all 250ms ease-in-out;
    box-shadow: 0 2px 2px -1px rgba(152, 162, 179, 0.3);
    border-radius: 4px;
}
